FROM	ubuntu:18.04

RUN     cd /tmp \
&&      apt-get update \
&&      apt-get install -y wget unzip \
&&      wget https://github.com/mothur/mothur/releases/download/v1.44.3/Mothur.linux_noReadline.zip \
&&      unzip Mothur.linux_noReadline.zip \
&&      mv mothur /opt/mothur \
&&      ln -s /opt/mothur/mothur /usr/local/bin/mothur \
&&      ln -s /opt/mothur/uchime /usr/local/bin/uchime \
&&      ln -s /opt/mothur/vsearch /usr/local/bin/vsearch \
&&      cd / \
&&      rm -rf /tmp/* \
&&      apt-get autoremove -y wget unzip \
&&      rm -rf /var/lib/apt/lists/*

LABEL tool=mothur version=1.44.3

WORKDIR /data

